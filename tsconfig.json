{
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    /* Additional Checks */
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "allowJs": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
